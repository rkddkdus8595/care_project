<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".details_select"
    android:background="#F0F8FF">


    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#0041C2"
        android:fontFamily="@font/nexon1"
        android:gravity="center"
        android:text="접수 정보 상세"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="109dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:text="접수 일자"
            android:textColor="#111111"
            android:textSize="17dp"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="252dp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="304dp"
            android:layout_height="85dp"
            android:layout_below="@+id/textView7"
            android:gravity="center"
            android:fontFamily="@font/nanums"
            android:text=""
            android:textColor="#5D5D5D"
            android:textSize="16dp"
            app:backgroundTint="#F6F6F6"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="305dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.4dp"
        android:layout_alignParentTop="true"
        android:background="#EAEAEA"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="218dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="109dp"
            android:layout_height="270dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:text="접수 내용"
            android:textColor="#111111"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="302dp"
            android:layout_height="270dp"
            android:fontFamily="@font/nanums"
            android:text=""
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#5D5D5D"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1.4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#EAEAEA"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="218dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/txt"
            android:layout_width="109dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:text="처리 현황"
            android:textColor="#111111"
            android:textSize="17dp"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="218dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:text=""
            android:textColor="#747474"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="440dp" />

        <TextView
            android:id="@+id/txtProcess"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#7BCCB5"
            android:gravity="center"
            android:fontFamily="@font/nanums"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="191dp"
            tools:layout_editor_absoluteY="523dp" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1.4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#EAEAEA"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="218dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="109dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/nanums"
        android:gravity="center"
        android:text="처리 시간"
        android:textColor="#111111"
        android:textSize="17dp"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="196dp" />

    <TextView
        android:id="@+id/txtProcessT"
        android:layout_width="302dp"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/nanums"
        android:gravity="center"
        android:text=""
        android:textColor="#5D5D5D"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="440dp" />

</LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1.4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#EAEAEA"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="218dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:layout_width="161dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="440dp" />
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/back_17" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0041C2"
        android:gravity="center" />

</LinearLayout>