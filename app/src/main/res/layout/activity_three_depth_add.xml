<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".one_depth_add">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#625D5D">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/back_1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanums"
            android:text="서비스 관리"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBtnMenu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/menu_7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:fontFamily="@font/nanums"
            android:text="3단계 신규 등록"
            android:textColor="#353535"
            android:textSize="20dp" />
    </LinearLayout>

    <View
    android:id="@+id/view3"
    android:layout_width="match_parent"
    android:layout_height="1.4dp"
    android:background="#747474" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:fontFamily="@font/nanums"
            android:text="- 원하는 타이틀 ex) 층수"
            android:textColor="#353535"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtSubject"
            android:layout_width="363dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/edit_circle"
            android:ems="10"
            app:backgroundTint="#E5E4E2"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:hint="  글자를 입력해주세요"
            android:textSize="17dp"
            android:inputType="textPersonName" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.4dp"
        android:layout_marginTop="50dp"
        android:background="#E5E4E2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/txt11"
            android:layout_width="370dp"
            android:layout_height="59dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/nanums"
            android:textColor="#353535"
            android:text="- 타이틀에 따른 내용 ex) 3층\n\n여러개는 선택지를 ';' 로 구분을 해주세요 ex) 3층;4층;5층"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtOne"
            android:layout_width="363dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_circle"
            android:ems="10"
            app:backgroundTint="#E5E4E2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:hint="  글자를 입력해주세요"
            android:textSize="17dp"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <ImageButton
            android:id="@+id/btnCommit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="180dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/check" />
    </LinearLayout>

</LinearLayout>