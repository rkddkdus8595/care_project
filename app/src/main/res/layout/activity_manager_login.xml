<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".manager_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/lottepng" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquare_acr"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="관리자"
            android:textColor="#4C4C4C"
            android:textSize="36dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="218dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            app:srcCompat="@drawable/manager" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtID"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="ID :"
            android:textColor="#111111"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtID"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:background="@drawable/black_radius"
            android:backgroundTint="#FFFFFF"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtPasswd"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="PW :"
            android:textColor="#111111"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtPasswd"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:background="@drawable/black_radius"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_width="164dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:textColor="#4C4C4C"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btnLogin"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            app:srcCompat="@drawable/login_1" />
    </LinearLayout>











</LinearLayout>