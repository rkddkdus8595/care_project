<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer_final_depth"
    android:orientation="vertical"
    android:background="#F0F8FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#0041C2">

        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/back_16" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="262dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:text="최종 확인"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBtnMenu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/menu_1"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/one_gray" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/arrow_gray" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/two_gray" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/arrow_gray" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/three_gray" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/arrow_blue" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/final_blue" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="123dp"
            android:layout_height="60dp"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="방문 매장"
            android:textColor="#111111"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txtStore"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:text=""
            android:textColor="#5D5D5D"
            android:textSize="17dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentTop="true"
        android:background="#737CA1"
        android:layout_marginTop="0.4dp"
        android:layout_marginBottom="0.4dp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="218dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="123dp"
            android:layout_height="60dp"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="1단계"
            android:textColor="#111111"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/txtOneDepthName"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:text=""
            android:textColor="#5D5D5D"
            android:textSize="17dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentTop="true"
        android:background="#737CA1"
        android:layout_marginTop="0.4dp"
        android:layout_marginBottom="0.4dp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="218dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView123"
            android:layout_width="123dp"
            android:layout_height="60dp"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="2단계"
            android:textColor="#111111"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/txtTwoDepthName"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:text=""
            android:textColor="#5D5D5D"
            android:textSize="17dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentTop="true"
        android:background="#737CA1"
        android:layout_marginTop="0.4dp"
        android:layout_marginBottom="0.4dp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="218dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/nanums"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="3단계"
            android:textColor="#111111"
            android:textSize="17dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentTop="true"
        android:background="#EAEAEA"
        android:layout_marginTop="0.4dp"
        android:layout_marginBottom="0.4dp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="218dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="408dp"
            android:layout_height="310dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/btnCommit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/check_1"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center" />

    </LinearLayout>



</LinearLayout>